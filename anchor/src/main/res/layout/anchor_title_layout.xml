<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/anchor_title"
        android:layout_marginTop="10dp"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/anchor_coner">
        <ImageView
            android:id="@+id/anchor_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/anchor_img" />
        <TextView
            android:id="@+id/anchor_name"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/anchor_img"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/anchor_care_btn"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:text="Cangwang"/>

        <ImageView
            android:id="@+id/anchor_care_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_input_add" />
    </RelativeLayout>
</RelativeLayout>
